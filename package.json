{
  "name": "forms",
  "version": "1.0.0",
  "description": "Library to handle making forms in React",
  "main": "index.js",
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/client/__tests__/setup/setupEnzyme.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/client/__tests__/setup/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "server": "nodemon src/server/index.js --ignore tests",
    "server:prod": "NODE_ENV=production nodemon src/server/index.js --ignore tests",
    "client": "webpack-dev-server --hot --inline --progress --colors --watch --content-base --config ./build-utils/webpack.config.js --env.env=dev",
    "dev:hot": "NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "build": "webpack --config ./build-utils/webpack.config.js --env.env=prod",
    "build:server": "npm run build && npm run server:prod",
    "build:analyze": "npm run build -- --env.addon=bundleanalyze --env.addon=bundlevisualizer && npm run server:prod",
    "test:front": "jest ./src/client/__tests__",
    "test:front:watch": "jest --watch ./src/client/__tests__",
    "test:front:coverage": "jest --coverage ./src/client/__tests__",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand ./src/client/__tests__"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "concurrently": "^6.1.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "react": "^17.0.2",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "axios-mock-adapter": "^1.19.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-airbnb": "^4.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^7.1.2",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.2",
    "dotenv-webpack": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "image-webpack-loader": "7.0.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^4.3.0",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.4",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "styled-components": "^5.3.0",
    "terser-webpack-plugin": "^5.1.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.37.0",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
